{
  "name": "@app/web",
  "version": "0.1.0",
  "private": true,
  "description": "Astro with React integration for fullstack app",
  "type": "module",
  "scripts": {
    "build": "astro build",
    "docker:build": "docker build -f ../../docker/Dockerfile.web --build-arg PUBLIC_API_URL=\"/api\" -t lgdweb/fullstack-astro-web:prod ../../",
    "docker:push": "docker push lgdweb/fullstack-astro-web:prod",
    "dev": "astro dev",
    "start": "astro preview",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules coverage dist .astro .turbo"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.0",
    "@astrojs/react": "^4.3.0",
    "astro": "^5.12.9",
    "astro-icon": "^1.1.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/ts-config": "workspace:*",
    "@packages/types": "workspace:*",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
