{
  "name": "@app/api",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS api with clean architecture for fullstack app",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "nest start",
    "test": "jest",
